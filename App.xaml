<Application x:Class="GettingReal.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GettingReal"
             xmlns:views="clr-namespace:GettingReal.View.UserControls"
             xmlns:viewmodels="clr-namespace:GettingReal.ViewModel"
             StartupUri="View\MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:BookViewModel}">
            <views:BookUC/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:BoardGameViewModel}">
            <views:BoardGameUC/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:LiveEquipmentViewModel}">
            <views:LiveEquipmentUC/>
        </DataTemplate>
        
    </Application.Resources>
</Application>
